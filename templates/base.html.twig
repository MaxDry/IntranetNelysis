<!DOCTYPE html>
<html>
    <head>
    <link rel="icon" type="image/png" href="https://image.noelshack.com/fichiers/2019/14/4/1554409081-logonelysis-32x32.png"/>
        <meta charset="UTF-8">
        <title>{% block title %}Intranet Nelysis{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset("main.css") }}">

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <nav id="nav-bar" class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div>
            <a href="{{ path('nelysis') }}">
                <img id="test" src="https://image.noelshack.com/fichiers/2019/13/6/1553963241-logo-blanc-sans-fond.png"/>
            </a> 
            <a class="navbar-brand" href="{{ path('nelysis') }}">
            Intranet Nelysis
            </a> 
        </div>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul id= "tqt"class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a id="ongletMenu" class="nav-link" href="{{ path('news') }}">Actualités</a>
                </li>
                <li class="nav-item">
                    <a id="ongletMenu" class="nav-link" href="{{ path('task') }}">Tâches</a>
                </li>
                <li class="nav-item">
                    <a id="ongletMenu" class="nav-link" href="{{ path('member') }}">Membres</a>
                </li>
                <li class="nav-item">
                    <a id="ongletMenu" class="nav-link" href="{{ path('lineUp') }}">Line-Up</a>
                </li>
            </ul>
        </div>
        <div class ="logos-social">
            <a href="https://twitter.com/nelysis_team">
                <img id= "network-logo"src="https://image.noelshack.com/fichiers/2019/14/4/1554406712-logo-twitter.png"/>
            </a> 
            <a href="https://www.facebook.com/TeamNelysis/">
                <img id= "network-logo"src="https://image.noelshack.com/fichiers/2019/14/4/1554406716-logo-facebook.png"/>
            </a> 
            {% if is_granted("ROLES_FONDATEUR") or is_granted("ROLE_MODERATEUR") or is_granted("ROLE_ADMIN") %} 
            <a class="dropdown-item waves-effect waves-light" href="{{ path('app_logout') }}"> <i class="fas fa-sign-out-alt fa-lg"></i>Déconnexion</a>
        {% endif %} 
        </div>
        
    </nav>
    
    <div class="main">
        <div class="container">
            {% block body %}
            
            
            {% endblock %}
        </div>
    </div>
        {% block javascripts %}
        
            <!-- JQuery -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <!-- Bootstrap tooltips -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
            <!-- Bootstrap core JavaScript -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
            <!-- MDB core JavaScript -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.4/js/mdb.min.js"></script>
             <!-- Application Javascript -->
        <script type="text/javascript" src="{{ asset("js/application.js") }}"></script>
        {% endblock %}
    </body>
</html>
